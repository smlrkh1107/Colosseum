<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--    이거 drawble에 만들어져있다.-->
    <item
        android:state_focused="false">
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">
                    <solid
                        android:color="@color/veryLightGray"/>
                </shape>
            </item>

            <item
                android:top="5dp"
                android:left="5dp"
                android:right="5dp"
                android:bottom="5dp">
                <shape
                    android:shape="rectangle">
                    <solid
                        android:color="@color/white"/>
                </shape>
            </item>
        </layer-list>
    </item>


<!--    포커싱잡혔을 때,-->
    <item
        android:state_focused="true">
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">
                    <solid
                        android:color="@color/black"/>
                </shape>
            </item>

            <item
                android:top="5dp"
                android:left="5dp"
                android:right="5dp"
                android:bottom="5dp">
                <shape
                    android:shape="rectangle">
                    <solid
                        android:color="@color/white"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>